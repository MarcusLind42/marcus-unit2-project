<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>  
    <h1>It's <%= isSelf ? 'you' : profile.name %>!</h1>
  <% if ((isSelf) && (!profile.team.length)) { %>
    <form action="/profiles/<%= profile._id %>/createteam" method="POST">
      <button type="submit">Create Team</button>
    </form>
    <% } else { %>
  <% } %> 

  <h3>Your team:</h3>
  <section>
    <ul>
      <% profile.team.forEach(team => { %>
        <li>
          <img src="<%= team.sprite %>"><br>
          No. <%= team.pokedexId %> 
          Name: <%= team.name[0].toUpperCase() + team.name.substring(1) %>
  
          <br>
          <% if (team.type1.length > 1) { %>
            <%= team.type1[0].toUpperCase() %><%= ` ` %>   
            <%= team.type1[1].toUpperCase() %>  
          <% } else { %>
            <%= team.type1[0].toUpperCase() %>
          <% } %> 
          <br>
          <%= team.description %>
        </li>
      <% }) %>
    </ul>
  </section>

<%- include('../partials/footer') %>