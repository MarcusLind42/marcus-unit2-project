<%- include('../partials/html-head') %>

<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>

<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>  
    <h1>It's <%= isSelf ? 'you' : profile.name %>!</h1>
  <% if ((isSelf) && (!profile.team.length)) { %>
    <form action="/profiles/<%= profile._id %>/createteam" method="POST">
      <button type="submit">Create Team</button>
    </form>
  <% } else { %>
  <% } %> 
<main>
  <main class="bg-primary">
    <div class="container py-4 px-3">
      <div 
      class="row row-cols- row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g1 px-4"
      >
      <% profile.team.forEach(team => { %>
        <div class="col">
          <a class="text-decoration-none">
            <div class="card mb-4 shadow-lg">
              <img
                class="card-img-top"
                src="<%= team.sprite %>"
                alt="<%= team.name %>"
                width="100%"
              />
                <div class="card-body bg-light">
                  <p class="card-title fs-1 text-dark"><%= team.name[0].toUpperCase() + team.name.substring(1) %></p>
                  <p class="card-title fs-3 text-muted  "><% if (team.type1.length > 1) { %>
                  <%= team.type1[0].toUpperCase() %><%= ` ` %>   
                  <%= team.type1[1].toUpperCase() %>  
                  <% } else { %>
                  <%= team.type1[0].toUpperCase() %>
                  <% } %></p>
                  <p class="fs-3">
                  Height: <%= team.height/10 %>m
                  Weight: <%= team.weight/10 %>kg 
                  <br><%= team.description %><br> 
                  </p>
                  <% if (isSelf) { %> 
                    <form action="/profiles/<%= team._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-secondary" type="submit">Remove from team</button>
                    </form>
                  <% } %> 
                </div>
            </div>
          </a>
        </div>
      <% }) %> 
    </div>
  </div>
</main>

<%- include('../partials/footer') %>