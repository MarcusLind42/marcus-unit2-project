<main>
  <h1>Hello, <%= user ? `Trainer ${user.profile.name}!` : "Pokemon Trainer!" %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <% pokemon.forEach(function(pokemon) { %>
    <h2><%= pokemon.name %> </h2>
    <% }) %> 
</main>

