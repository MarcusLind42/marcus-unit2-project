<%- include('../partials/html-head') %>

<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>

<%- include('../partials/nav') %>

<main>
<main class="bg-primary">
  <div class="container py-4 px-3">
    <div 
      class="row row-cols-md-12 row-cols-lg-12 row-cols-xl-12 g1 px-4"
    >
        <div class="col">
          <a class="text-decoration-none" href="/pokemon/<%= pokemon._id %>">
            <div class="card mb-4 shadow-lg" style="width: 30rem;">
                <img
                  class="card-img-top"
                  src="<%= pokemon.sprite %>"
                  alt="<%= pokemon.name %>"
                  width="100%"
                />
                <div class="card-body bg-light">
                  <p class="card-title fs-1 text-dark"><%= pokemon.name[0].toUpperCase() + pokemon.name.substring(1) %></p>
                  <p class="card-title fs-3 text-muted  ">
                  <% if (pokemon.type1.length > 1) { %>
                    <%= pokemon.type1[0].toUpperCase() %><%= ` ` %>   
                    <%= pokemon.type1[1].toUpperCase() %>  
                  <% } else { %>
                    <%= pokemon.type1[0].toUpperCase() %>
                  <% } %></p>
                  <p class="fs-2">
                    Height: <%= pokemon.height/10 %>m
                    Weight: <%= pokemon.weight/10 %>kg 
                <br><%= pokemon.description %><br> </p>
              </div>
            </div>
          </a>
        </div>
    </div>
  </div>
</main>
<a href="/pokemon"><h3>Back to PokeDex</h3></a>

<%- include('../partials/footer') %>