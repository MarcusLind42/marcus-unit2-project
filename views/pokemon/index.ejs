<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>PokeDex</h1>
  
<section>
  <ul>
    <% pokemon.forEach(pokemon => { %>
      <li>
        <img src="<%= pokemon.sprite %>"><br>
        No. <%= pokemon.pokedexId %> 
        Name: <%= pokemon.name[0].toUpperCase() + pokemon.name.substring(1) %><br>
        <%= pokemon.type1.join(', ') %> <br>
        Height: <%= pokemon.height/10 %> m
        Weight: <%= pokemon.weight/10 %> kg<br>
        <%= pokemon.description %> 
      </li>
    <% }) %>
  </ul>
</section>  

</main>

<%- include('../partials/footer') %>