<%- include('../partials/html-head') %>

<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>

<%- include('../partials/nav') %>

<main>
  <h1>PokeDex</h1>
<main class="bg-primary">
  <div class="container py-4 px-3">
    <div 
      class="row row-cols- row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g1 px-4"
    >
      <% pokemon.forEach(pokemon => { %>
        <div class="col">
          <a class="text-decoration-none" href="/pokemon/<%= pokemon._id %>">
            <div class="card mb-4 shadow-lg">
                <img
                  class="card-img-top"
                  src="<%= pokemon.sprite %>"
                  alt="<%= pokemon.name %>"
                  width="100%"
                />
              <div class="card-body bg-light">
                <p class="card-title fs-2 text-dark"><%= pokemon.name[0].toUpperCase() + pokemon.name.substring(1) %></p>
                <p class="card-title fs-6 text-muted  "><% if (pokemon.type1.length > 1) { %>
                  <%= pokemon.type1[0].toUpperCase() %><%= ` ` %>   
                  <%= pokemon.type1[1].toUpperCase() %>  
                <% } else { %>
                  <%= pokemon.type1[0].toUpperCase() %>
                <% } %></p>
                <% if (profile.team.includes(pokemon._id)) {%>
                  <button type="button" class="btn btn-secondary" disabled>Already on Team</button> 
                  <% } else { %> 
                      <form action="/pokemon/<%= pokemon._id %>/addtoteam" method="POST">
                        <button type="submit" class="btn btn-secondary">Add to Team</button>
                      </form>
                  <% } %>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>